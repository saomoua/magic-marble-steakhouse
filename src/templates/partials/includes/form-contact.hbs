{{#> contact-form-block}}
<form action="" class="form form-contact" id="form-contact" method="post">
    <div class="form-group">
        <label for="contactName">Name</label>
        <input name="contactName" type="text">
    </div>
    <div class="form-group">
        <label for="contactEmail">Email</label>
        <input name="contactEmail" type="text">
    </div>
    <div class="form-group">
        <label for="contactMessage">Message</label>
        <textarea name="contactMessage"></textarea>
    </div>
    <div class="form-group form-group-actions">
        <input class="button" type="submit" value="Send Message">
        <a class="form-cancel" href="#">Cancel</a>
    </div>
</form>
<div id="contact-success">
    <h2>Thank you for sending your message</h2>
    <p>We appreciate you taking the time to contact us, to let us know how we are doing and serving you. We hope that you share us with your friends and return to enjoy our food.</p>
    <p>If you have requested a response, we will get back to you within 48 business hours.</p>
</div>
{{/contact-form-block}}
